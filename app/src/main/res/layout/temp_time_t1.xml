<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_timetemp1_bg"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_timetemp1_hh"
            android:background="@drawable/bg_rounded_white"
            android:textColor="@color/black"
            android:text="12"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_timetemp1_colon"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:text=":"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:id="@+id/rl_rounded_mm"
            android:gravity="center"
            android:background="@drawable/bg_rounded_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_timetemp1_mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:paddingLeft="15sp"
                    android:id="@+id/tv_timetemp1_format"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:singleLine="true"/>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_marginTop="5sp"
        android:id="@+id/tv_timetemp1_d_m_y"
        android:singleLine="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Tuessday Feb. 4, 2020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>