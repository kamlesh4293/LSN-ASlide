<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_waether4day_main_v"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_white"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/ll_main_bg"
            android:background="@drawable/bg_rounded_filled_blue"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_weat4v_main_temp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="35dp"
                        android:text="-7 °C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_weat4v_main_desc"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:text="Plutot nuagex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_weat4v_main_tempminmax"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:text="-2 °C /-2 °C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_weat4v_main_image"
                    android:src="@drawable/icw_partly_sunny"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_weat4v_main_city"
                android:textColor="@color/white"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="2sp"
                android:padding="5dp"
                android:text="Indore, IN"
                android:background="@color/bg_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_bottomview_v"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_weat4v_main_humadity"
                    android:src="@drawable/icw_2_showers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_weat4v_main_humadity"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/bg_color_light"
                    android:text="13.9 Km/h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:background="@color/color_grey"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_weat4v_main_wind"
                    android:src="@drawable/icw__2_windy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_weat4v_main_wind"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/bg_color_light"
                    android:text="13.9 Km/h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_waether4day_day1_v"
            android:background="@drawable/bg_rounded_white_bor_blue"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_weat4v_day1_minmax"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="-7 °C / -7 °C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_weat4v_day1_desc"
                        android:paddingHorizontal="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="Plue et neige"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_weat4v_day1"
                    android:src="@drawable/icw_partly_sunny"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_weat4v_day1_date"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Mer. 2 mars 2021"
                android:layout_margin="2dp"
                android:background="@drawable/bg_bot_rounded_filled_grey"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_rounded_white_bor_blue"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/ll_waether4day_day2_v"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_weat4v_day2_minmax"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="-7 °C / -7 °C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_weat4v_day2_desc"
                        android:paddingHorizontal="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="Plue et neige"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_weat4v_day2"
                    android:src="@drawable/icw_partly_sunny"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_weat4v_day2_date"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Mer. 2 mars 2021"
                android:layout_margin="2dp"
                android:background="@drawable/bg_bot_rounded_filled_grey"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_waether4day_day3_v"
            android:background="@drawable/bg_rounded_white_bor_blue"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_weat4v_day3_minmax"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="-7 °C / -7 °C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_weat4v_day3_desc"
                        android:paddingHorizontal="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="Plue et neige"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_weat4v_day3"
                    android:src="@drawable/icw_partly_sunny"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_weat4v_day3_date"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Mer. 2 mars 2021"
                android:layout_margin="2dp"
                android:background="@drawable/bg_bot_rounded_filled_grey"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_waether4day_day4_v"
            android:background="@drawable/bg_rounded_white_bor_blue"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_weat4v_day4_minmax"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="-7 °C / -7 °C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_weat4v_day4_desc"
                        android:paddingHorizontal="10sp"
                        android:textColor="@color/bg_color"
                        android:textSize="15dp"
                        android:text="Plue et neige"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_weat4v_day4"
                    android:src="@drawable/icw_partly_sunny"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_weat4v_day4_date"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Mer. 2 mars 2021"
                android:layout_margin="2dp"
                android:background="@drawable/bg_bot_rounded_filled_grey"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>