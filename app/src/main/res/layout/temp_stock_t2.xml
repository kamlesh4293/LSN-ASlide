<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/ll_stocktemp2_bg"
    android:paddingHorizontal="100dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stocktemp2_symbol"
            android:layout_width="wrap_content"
            android:paddingRight="150dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_stocktemp2_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_stocktemp2_hi"
            android:text="High"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_stocktemp2_low"
            android:text="Low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:orientation="vertical"
        android:paddingVertical="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="80dp"
            android:id="@+id/tv_stocktemp2_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_stocktemp2_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_stocktemp2_hivalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_stocktemp2_lowvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>