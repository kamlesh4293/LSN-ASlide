<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_cod_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:id="@+id/tv_codhori_time"
            android:background="@color/black_trans"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18px"
            android:fontFamily="@font/segoeui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:src="@drawable/ic_video"
            android:id="@+id/iv_codhori_vid_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_codhori_label"
            android:padding="5dp"
            android:background="@color/cod_selected_color"
            android:textColor="@color/white"
            android:gravity="center"
            android:lines="1"
            android:fontFamily="@font/myriad_pro_condensed"
            android:textSize="28px"
            android:layout_alignParentBottom="true"
            android:text="kamlesh"
            android:layout_width="match_parent"
            android:layout_height="65px"/>

    </RelativeLayout>



</LinearLayout>