<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_weather_temp1_temptemp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        android:text="Template 1"
        android:maxLines="1"
        app:autoSizeStepGranularity="2sp" />


    <com.sdsmdg.harjot.vectormaster.VectorMasterView
        android:layout_width="150dp"
        android:visibility="gone"
        android:layout_height="150dp"/>

    <ImageView
        android:id="@+id/iv_weather_temp1_image"
        android:layout_gravity="center"
        android:src="@drawable/icw_partly_sunny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_weather_t1_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_weather_temp1_temp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="18Â°c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_weather_temp1_desc"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Plutot nuageux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_weather_temp1_city"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Toronto, ON, Canada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>